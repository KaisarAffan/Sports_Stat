<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profilebackground"
    android:id="@+id/main">


    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_marginTop="140dp"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:src="@drawable/kesar"
        android:layout_marginBottom="15dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usernameIcon"
        android:layout_below="@+id/profileImage"
        android:src="@drawable/baseline_account_circle_24"
        android:layout_marginStart="30dp"
        />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Username"
        android:layout_toRightOf="@id/usernameIcon"
        android:textColor="#12678D"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/profileImage"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvusername"
        android:layout_below="@+id/username"
        android:layout_toRightOf="@id/usernameIcon"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:layout_marginStart="10dp"
        android:text="Kaisar affan danendra"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailIcon"

        android:layout_below="@+id/tvusername"
        android:src="@drawable/baseline_email_24"
        android:layout_marginStart="30dp"
        />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Email"
        android:layout_toRightOf="@id/emailIcon"
        android:textColor="#12678D"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/tvusername"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvemail"
        android:layout_below="@+id/email"
        android:layout_toRightOf="@id/emailIcon"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:layout_marginStart="10dp"
        android:text="BlackHead2@gmail.com"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:id="@+id/logout"
        android:textColor="@android:color/white"
        android:backgroundTint="#208F8C"
        android:layout_below="@+id/tvemail"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>